<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLaunchManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_dictionary_manager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLaunchDictionary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/launch_dictionary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLaunchManager" />

</androidx.constraintlayout.widget.ConstraintLayout>